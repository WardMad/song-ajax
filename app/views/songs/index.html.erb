<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="page-header">Song List</h1>

    <% if notice.present? %>
      <div class="alert alert-info" role="alert">
        <%= notice %>
      </div>
    <% end %>

    <%= render "form", song: @song %>

    <hr />

    <table class="table table-striped" id="songList">
      <%= render @songs %>
    </table>

    <div class="footer">
      Song: <span id="song-count">1</span> •
      Created: <span id="created-count">0</span> •
      Total: <span id="total-count">1</span> •
      <a href="#" id="clean-up">Delete songs</a>
    </div>
  </div>
</div>
